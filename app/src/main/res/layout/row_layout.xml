<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:weightSum="1"
    android:baselineAligned="true"
    android:background="#ffffff"
    android:contextClickable="false"
    android:clickable="true">
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:id="@+id/text_eventName"
        android:textColor="#000000"
        android:text="Event Name"
        android:gravity="center"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:id="@+id/eventRating"
        android:textColor="#000000"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:clickable="true"
        android:numStars="5"
        android:isIndicator="false"
        android:progressBackgroundTint="#8e8b8b"
        android:progressTint="#800000"
        android:secondaryProgressTint="#8e8b8b"
        />

    <ImageView
        android:id="@+id/img_eventDetail"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/ic_event_detail"/>

</LinearLayout>